{% extends 'base.html.twig' %}

{% block title %}{{ course.Name }}{% endblock %}

{% block body %}
    <h1>{{ course.Name }}</h1>

    <p>{{ course.Description }}</p>

    {% for lesson in course.lessons %}

        <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}"><h2>{{ lesson.LessonNumber }} {{ lesson.Title }}</h2></a>

    {% else %}
        <tr>
            <td colspan="5">no records found</td>
        </tr>
    {% endfor %}


    <a href="{{ path('app_course_index') }}">Вернуться к списку курсов</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>

    <a href="{{ path('app_lesson_new', {'course': course.id}) }}">Создать новый урок</a>


    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
