{% extends 'base.html.twig' %}

{% block title %}Список курсов{% endblock %}

{% block body %}
    <div class="container">
        <h1>Список курсов</h1>
            <div class="row row-cols-1 row-cols-md-2 g-4 p-2" >
        {% for course in courses %}
            <div class="col">
                <div class="card h-100 shadow" >
                    <div class="card-body">
                        <a href="{{ path('app_course_show', {'id': course.id}) }}" class="text-decoration-none text-black">
                            <h3 class="card-title">{{ course.Name }}</h3>
                            <p class="card-text">{{ course.Description }}</p>
                        </a>
                    </div>
                </div>

            </div>


        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
            </div>

        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a href="{{ path('app_course_new') }}" class="btn btn-outline-secondary" role="button">Добавить курс</a>
            {% endif %}
        </footer>

        </div>
{% endblock %}
