{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ lesson.LessonNumber }}. {{ lesson.Title }}</h1>
        <a href="{{ path('app_course_show', {'id': lesson.course.id}) }}">Вернуться к курсу</a>
        {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="d-flex">
            <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}" class="btn btn-outline-secondary" role="button">Редактировать</a>

            {{ include('lesson/_delete_form.html.twig') }}
        </div>
        {% endif %}
        <p>{{ lesson.LessonContent }}</p>




    </div>
{% endblock %}
